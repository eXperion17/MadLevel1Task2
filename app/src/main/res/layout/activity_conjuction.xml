<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ConjuctionActivity">

    <TextView
        android:id="@+id/textView"
        android:layout_width="275dp"
        android:layout_height="67dp"
        android:text="Conjuction (AND)"
        android:textAlignment="center"
        android:textSize="30sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.067" />

    <LinearLayout
        android:id="@+id/linearLayout"
        android:layout_width="408dp"
        android:layout_height="379dp"
        android:orientation="horizontal"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.333"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView"
        app:layout_constraintVertical_bias="0.183">

        <LinearLayout
            android:layout_width="122dp"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <TextView
                android:id="@+id/caseOneA"
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:layout_weight="2"
                android:text="A"
                android:textAlignment="center"
                android:textSize="30sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/caseOneOne"
                android:layout_width="match_parent"
                android:layout_height="42dp"
                android:layout_weight="2"
                android:text="T"
                android:textAlignment="center"
                android:textSize="24sp" />

            <TextView
                android:id="@+id/caseOneTwo"
                android:layout_width="match_parent"
                android:layout_height="39dp"
                android:layout_weight="2"
                android:text="T"
                android:textAlignment="center"
                android:textAllCaps="true"
                android:textSize="24sp" />

            <TextView
                android:id="@+id/caseOneThree"
                android:layout_width="match_parent"
                android:layout_height="39dp"
                android:layout_weight="2"
                android:text="F"
                android:textAlignment="center"
                android:textAllCaps="true"
                android:textSize="24sp" />

            <TextView
                android:id="@+id/caseOneFour"
                android:layout_width="match_parent"
                android:layout_height="39dp"
                android:layout_weight="2"
                android:text="F"
                android:textAlignment="center"
                android:textAllCaps="true"
                android:textSize="24sp" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="122dp"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <TextView
                android:id="@+id/caseOneB"
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:layout_weight="2"
                android:text="B"
                android:textAlignment="center"
                android:textSize="30sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/caseTwoOne"
                android:layout_width="match_parent"
                android:layout_height="42dp"
                android:layout_weight="2"
                android:text="T"
                android:textAlignment="center"
                android:textSize="24sp" />

            <TextView
                android:id="@+id/caseTwoTwo"
                android:layout_width="match_parent"
                android:layout_height="39dp"
                android:layout_weight="2"
                android:text="F"
                android:textAlignment="center"
                android:textAllCaps="true"
                android:textSize="24sp" />

            <TextView
                android:id="@+id/caseTwoThree"
                android:layout_width="match_parent"
                android:layout_height="39dp"
                android:layout_weight="2"
                android:text="F"
                android:textAlignment="center"
                android:textAllCaps="true"
                android:textSize="24sp" />

            <TextView
                android:id="@+id/caseTwoFour"
                android:layout_width="match_parent"
                android:layout_height="39dp"
                android:layout_weight="2"
                android:text="T"
                android:textAlignment="center"
                android:textAllCaps="true"
                android:textSize="24sp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="122dp"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <TextView
                android:id="@+id/caseOneAB"
                android:layout_width="match_parent"
                android:layout_height="56dp"
                android:layout_weight="0"
                android:text="A ^ B"
                android:textAlignment="center"
                android:textSize="30sp"
                android:textStyle="bold" />

            <EditText
                android:id="@+id/caseOneAnswer"
                android:layout_width="match_parent"
                android:layout_height="72dp"
                android:layout_weight="0"
                android:inputType="text|textCapSentences|textCapWords"
                android:textAlignment="center"
                android:textSize="24sp" />

            <EditText
                android:id="@+id/caseTwoAnswer"
                android:layout_width="match_parent"
                android:layout_height="72dp"
                android:layout_weight="0"
                android:inputType="text|textCapSentences|textCapWords"
                android:textAlignment="center"
                android:textAllCaps="true"
                android:textSize="24sp" />

            <EditText
                android:id="@+id/caseThreeAnswer"
                android:layout_width="match_parent"
                android:layout_height="72dp"
                android:layout_weight="0"
                android:inputType="text|textCapSentences|textCapWords"
                android:textAlignment="center"
                android:textAllCaps="true"
                android:textSize="24sp" />

            <EditText
                android:id="@+id/caseFourAnswer"
                android:layout_width="match_parent"
                android:layout_height="72dp"
                android:layout_weight="0"
                android:inputType="text|textCapSentences|textCapWords"
                android:textAlignment="center"
                android:textAllCaps="true"
                android:textSize="24sp" />

        </LinearLayout>

    </LinearLayout>

    <Button
        android:id="@+id/button_submit"
        android:layout_width="129dp"
        android:layout_height="46dp"
        android:text="Submit"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/linearLayout"
        app:layout_constraintVertical_bias="0.753" />

</androidx.constraintlayout.widget.ConstraintLayout>